<section class="u-bgColor-gray js-sticky-widget-unstick">
  <div class="o-container u-padTop-x5 u-padBottom-x4">
    <div class="grid grid--center u-marBottom-x7">
      <div class="grid__item six-twelfths smo--four-twelfths mdo--three-twelfths u-textAlign-center">
